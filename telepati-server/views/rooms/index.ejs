  <style>
    .wrapper {
      height: 100%;
      width: 100%;
    }

    .display_none {
      display: none;
    }

    .header {
      position: fixed;
      left: 0;
      top: 0;
      width: 100%;
      height: 50px;
      display: flex;
      justify-content: center;
      background: #1E1F20;
      color: #ffffff;
    }

    .sidebar {
      position: fixed;
      width: 400px;
      height: 100%;
      top: 0;
      left: 0;
      bottom: 0;
      display: flex;
      justify-content: center;
      flex-direction: column;
    }

    .content {
      position: fixed;
      left: 400px;
      top: 0;
      width: calc(100% - 400px);
      height: 100%;
      background: #cbd4de;
    }

    .content-max {
      position: fixed;
      left: 0;
      top: 0;
      width: 100%;
      height: calc(100% - 75px);
      background: #cbd4de;
    }

    .footer {
      position: fixed;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 75px;
      background: #1E1F20;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .box1 {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .box2 {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      padding: 20px;
    }

    .video-container {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: row;
      flex-wrap: wrap;
    }

    .local-video {
      width: 100%;
      height: 100%;
      border-radius: 5px;
    }

    .galeri-view {
      height: 45%;
      width: 45%;
      margin: 10px;
      background: #3e3c41;
      /* border: 1px solid rgb(243, 238, 238); */
      border-radius: 5px;
    }

    .video-2 {
      position: relative;
      height: 70%;
      width: 45%;
      margin: 10px;
      background: #3E3C41;
      /* border: 1px solid rgb(243, 238, 238); */
      border-radius: 5px;
    }
    
    .video-4 {
      position: relative;
      height: 45%;
      width: 45%;
      margin: 10px;
      background: #3E3C41;
      /* border: 1px solid rgb(243, 238, 238); */
      border-radius: 5px;
    }
    
    .video-6 {
      position: relative;
      width: 30%;
      height: 48%;
      margin: 10px;
      background: #3E3C41;
      /* border: 1px solid rgb(243, 238, 238); */
      border-radius: 5px;
    }

    .name-container {
      display: flex;
      position: absolute;
      bottom: 0px;
      left:5px;
      color: white;
      font-size: 11px;
      background: rgba(0, 0, 0, 0.4);
      padding: 2px;
    }

    .video-participant{
      width: 100%; height:100%; border-radius: 5px;
    }

    .mic-button-container {
      position: absolute;
      top: 5px;
      right: 5px;
      width: 26px;
      height: 26px;
      background: rgba(0, 0, 0, 0.4);
      border-radius: 26px;
      transition: 0.3s;
      display: flex;
      margin: auto;
      align-items: center;
    }

    .mic_button_small {
      width: 24px;
      height: 24px;
      border-radius: 24px;
    }

    .personal-name {
      display: flex;
      position: absolute;
      bottom: 0px;
      color: white;
      font-size: 11px;
      background: rgba(0, 0, 0, 0.4);
      padding: 2px;
    }

    .call_button_large {
      width: 80px;
      height: 40px;
      border-radius: 30px;
      background: #fc5d5b;
      transition: 0.3s;
    }

    .share-button {
      width: 150px;
      height: 40px;
      border-radius: 10px;
      transition: 0.3s;
      margin-left: 5px;
      margin-right: 5px;
      background: #4fa3f7;
      color: white;
    }

    .call_button_small {
      width: 40px;
      height: 40px;
      background: #1e1f20;
      border-radius: 40px;
      transition: 0.3s;
      margin-left: 5px;
      margin-right: 5px;
    }

    .footers {
      position: fixed;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 75px;
      background: #1E1F20;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .footer-left {
      display: flex;
      align-items: center;
      flex-direction: row;
      margin-left: 25px;
    }

    .footer-midle {
      display: flex;
      align-items: center;
      flex-direction: row;
    }

    .footer-right {
      display: flex;
      align-items: center;
      flex-direction: row;
      margin-right: 25px;
    }

    #col-sm {
      display: flex;
    }
  </style>
